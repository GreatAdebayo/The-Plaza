{% schema %}
{
    "name":"Footer",
    "settings":[
       {
          "type":"text",
          "id":"logo_url",
          "label":"Shop Logo Url"
          
       },
       {
        "type":"text",
        "id":"about_us",
        "label":"About Shop",
        "default":"Donec vitae purus nunc. Morbi faucibus erat sit amet congue mattis. Nullam fringilla faucibus urna, id dapibus erat iaculis ut. Integer ac sem"
        
     },
       {
          "type":"text",
          "id":"shop_name",
          "default":"The Plaza",
          "label":"Contact Details"
       },
       {
        "type":"text",
        "id":"shop_address",
        "default":"1481 Creekside Lane Avila Beach, CA 93424",
        "label":"Contact Details"
     },
     {
        "type":"text",
        "id":"shop_mobile",
        "default":"+13 345 7953 32453",
        "label":"Contact Details"
     },
     {
        "type":"text",
        "id":"shop_email",
        "default":"office@youremail.com",
        "label":"Contact Details"
     }
    ]
 }


{% endschema %}