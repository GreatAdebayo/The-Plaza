<!-- Page Info -->
<div class="page-info-section page-info-big">
    <div class="container">
        <h2 class="text-capitalize">{{ collection.title }} Wears</h2>
    </div>
</div>
<!-- Page Info end -->


<!--  Section starts -->
<section class="product-section spad">
    <div class="container">
      <div class="row" id="product-filter">
        {% if collection.products  == empty%}
        <h6 class="text-center">No Product</h6>
        {% endif %} {% for product in collection.products %}
        <div class="mix col-lg-3 col-md-6 best">
          <div class="product-item">
            <figure>
              <img
                src="{{ product.featured_image.src | img_url: 'large' }}"
                alt="{{ product.featured_image.alt | escape }}"
              />
              <div class="pi-meta">
                <div class="pi-m-left">
                  <img src="img/icons/eye.png" alt="" />
                  <p>Quick view</p>
                </div>
                <div class="pi-m-right">
                  <img src="img/icons/heart.png" alt="" />
                  <p>Save</p>
                </div>
              </div>
            </figure>
            <div class="product-info">
              <a href="{{ product.url | within: collection }}"
                ><h6>{{ product.title }}</h6></a
              >
              <p>{{ product.price | money }}</p>
              {% if product.available %}
              <a href="#" class="site-btn btn-line">ADD TO CART</a>
              {% else %}
              <small class="text-danger"><strong>Sold Out</strong></small>
              {% endif %}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <!-- Section end -->
